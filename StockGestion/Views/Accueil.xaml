<Page x:Class="StockGestion.Views.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StockGestion.Views"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1024"
      Title="Accueil">

    <Grid>
        <Button x:Name="button_admin" 
                Content="Administrateur" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="283" 
                Margin="382,187,0,0" 
                Height="40"
                Style="{StaticResource styleButton1}" 
                Click="button_admin_Click"/>
        <Button x:Name="button_utilisateur" 
                Content="Utilisateur" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="283" 
                Margin="382,250,0,0" 
                Height="40"
                Style="{StaticResource styleButton1}"
                Click="button_utilisateur_Click"/>
    </Grid>
</Page>
